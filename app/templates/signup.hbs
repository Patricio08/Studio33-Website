<div class="card" id="signup-card">
    <article class="card-body mx-auto" style="max-width: 400px;">
        <h2 class="card-title mt-3 text-center">Create Account</h2>
        <p class="text-center">Get started with your free account</p>
        <p>
            <!-- <a href="" class="btn btn-block btn-twitter"> <i class="fab fa-twitter"></i> &nbsp; Login via Twitter</a> 
            <a href="" class="btn btn-block btn-facebook"> <i class="fab fa-facebook-f"></i> &nbsp; Login via facebook</a> -->
            <a href="" class="btn btn-block btn-google"> <i class="fab fa-google"></i> &nbsp; Login via Google</a>
        </p>
        <p class="divider-text">
            <span class="bg-light">OR</span>
        </p>

        <div class="signup-error text-center alert-warning alert" id="signup-error">
            <div class="my-auto">
                <i class="fas fa-exclamation-triangle" style="font-size: 25px"></i>
            </div>
            <div style="padding-left: 20px; padding-top: 2px;">
                <span id="error-text"></span>
            </div>
        </div>
       
        <div class="form-group input-group">
            <div class="input-group-prepend">
                <span class="input-group-text"> <i class="fa fa-user"></i> </span>
            </div>
            <input id="idAccText" name="" class="form-control" placeholder="Nickname" type="text">
        </div> 
        <div class="form-group input-group">
            <div class="input-group-prepend">
                <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
            </div>
            <input id="emailAccText" name="" class="form-control" placeholder="Email address" type="email">
        </div> 
        <div class="form-group input-group">
            <div class="input-group-prepend">
                <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
            </div>
            <input id="passAccText" class="form-control" placeholder="Create password" type="password">
        </div> 
        <div class="form-group input-group">
            <div class="input-group-prepend">
                <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
            </div>
            <input id="RePassAccText" class="form-control" placeholder="Repeat password" type="password">
        </div>                                    
        <div class="form-group">
            <button id="createAccBtn"  class="btn btn-primary btn-block"> Create Account  </button>
        </div>    
        <p class="text-center">Have an account? <a class="HashChange" id="navbar-login" >Log In</a> </p>                                                                 
    
    </article>
</div>